#!/bin/sh

###### SUBROUTINES ########################################################

usage()
{
cat <<EOF
Usage: simage-config [OPTIONS]
Options:
  --cppflags
  --ldflags
  --libs
  --version
  --usage | --help
EOF
  exit $1
}


###### MAIN ###############################################################

while test $# -gt 0; do
  case $1 in
    --cppflags)
      # NOTE: If the first includedir argument is changed in the future,
      # we need to update configure.in as well, since the argument is
      # shifted off.
      echo -I@includedir@ @SIMAGE_EXTRA_CPPFLAGS@
      ;;
    --ldflags)
      echo -L@libdir@ @SIMAGE_EXTRA_LDFLAGS@
      ;;
    --libs)
      echo @SIMAGE_LIBNAME@ @SIMAGE_EXTRA_LIBS@
      ;;
    --version)
      echo @SIMAGE_VERSION@
      ;;
    --help | --usage)
      usage 0
      ;;
    *)
      echo "Unknown option: \"$1\""
      usage 1 1>&2
      ;;
  esac
  shift
done

exit 0

