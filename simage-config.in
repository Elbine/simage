#!/bin/sh


###### SUBROUTINES ########################################################

usage()
{
cat <<EOF
    Usage: simage-config [OPTIONS]
    Options:
            [--version]
            [--cflags]
            [--ldflags]
            [--libs]
EOF
  exit $1
}


###### MAIN ###############################################################

if test $# -eq 0; then
  usage 1 1>&2
fi

while test $# -gt 0; do
  case $1 in
    --version)
      echo @SIMAGE_VERSION@
      ;;
    --cflags)
      echo -I@prefix@@includedir@ @SIMAGE_EXTRA_CFLAGS@
      ;;
    --ldflags)
      echo -L@prefix@@libdir@ @SIMAGE_EXTRA_LDFLAGS@
      ;;
    --libs)
      echo -lsimage @SIMAGE_EXTRA_LIBS@
      ;;
    *)
      echo "Unknown option: \"$1\""
      usage 1 1>&2
      ;;
  esac
  shift
done

exit 0
